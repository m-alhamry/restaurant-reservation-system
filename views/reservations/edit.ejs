<%- include('../partials/header') %>
    <h1>Edit Reservation</h1>
    <% if (error) { %>
        <p style="color: red;"><%= error %></p>
    <% } %>
    <p>Date: <%= reservation.timeSlot.date.toDateString() %> at <%= reservation.timeSlot.time %></p>
    <form method="POST" action="/reservations/<%= reservation._id %>?_method=PUT">
        <label>Number of People: 
            <input type="number" name="numberOfPeople" value="<%= reservation.numberOfPeople %>" min="1" required>
        </label><br>
        <button type="submit">Update</button>
    </form>
<%- include('../partials/footer') %>