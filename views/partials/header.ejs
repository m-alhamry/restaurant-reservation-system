            <% } else if (user.role==='staff' ) { %>
                <a href="/staff/reservations">All Reservations</a>
                <a href="/staff/timeSlots">Manage Time Slots</a>
            <% } %>
                <a href="/auth/sign-Out">Sign-Out</a>
            <% } else { %>
                <a href="/auth/sign-in">Sign-In</a>
                <a href="/auth/sign-up">Sign-Up</a>
            <% } %>
        </nav>
    </header>