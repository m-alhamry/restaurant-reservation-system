<%- include('../../partials/header') %>

<div class="reservations-container">
    <h1>All Reservations</h1>
    <% if (reservations.length===0) { %>
        <p>No reservations found.</p>
    <% } else { %>
        <table>
            <thead> <tr>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>People</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody> <% reservations.forEach(reservation=> { %>
                    <% if (reservation.timeSlot) { %>
                        <tr>
                            <td>
                                <%= reservation.user.firstName %>
                                <%= reservation.user.lastName %>
                            </td>
                            <td>
                                <%= reservation.timeSlot.date.toDateString() %>
                            </td>
                            <td>
                                <%= reservation.timeSlot.time %>
                            </td>
                            <td>
                                <%= reservation.numberOfPeople %>
                            </td>
                            <td>
                                <%= reservation.status %>
                            </td>
                            <td>
                                <% if (reservation.status==='pending' ) { %>
                                    <form action="/staff/reservations/<%= reservation._id %>/confirm"
                                        style="display:inline;" method="POST">
                                        <button type="submit" class="action-button confirm">Confirm</button>
                                    </form>
                                    <form action="/staff/reservations/<%= reservation._id %>/cancel"
                                        style="display:inline;" method="POST">
                                        <button type="submit" class="action-button cancel">Cancel</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% } %>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</div>

<%- include('../../partials/footer') %>